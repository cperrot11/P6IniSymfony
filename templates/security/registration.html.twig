{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}
        {{ form_row(form.username, {
            'label': 'Nom d\'utilisateur :',
            'attr': {'placeholder': 'Saisir nom utilisateur ...'}}) }}
    {{ form_row(form.email, {
        'label': 'Adresse mail :',
        'attr': {'placeholder': 'votre adresse mail ...'}}) }}
    {{ form_row(form.password, {
        'label': 'Mot de passe :',
        'attr': {'placeholder': 'Saisir votre de passe ...'}}) }}
    {{ form_row(form.confirm_password, {
        'label': 'Confirmation mot de passe :',
        'attr': {'placeholder': 'Répétez votre mot de passe'}}) }}
        <button type="submit" class="btn btn-success">Inscription !</button>
    {{ form_end(form) }}
{% endblock %}